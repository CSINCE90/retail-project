spring:
  application:
    name: payment-service
  datasource:
    url: jdbc:mysql://localhost:3306/retailsports_payment?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
    username: root
    password: YOUR_PASSWORD_HERE
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
        format_sql: true

server:
  port: 8088

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/
    register-with-eureka: true
    fetch-registry: true

# Payment Gateway Configuration (esempio)
payment:
  stripe:
    public-key: YOUR_STRIPE_PUBLIC_KEY
    secret-key: YOUR_STRIPE_SECRET_KEY
  paypal:
    client-id: YOUR_PAYPAL_CLIENT_ID
    client-secret: YOUR_PAYPAL_CLIENT_SECRET

management:
  endpoints:
    web:
      exposure:
        include: health,info

logging:
  level:
    com.retailsports.payment_service: DEBUG
